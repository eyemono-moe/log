---
import type { MarkdownHeading } from "astro";
import { formatInTimeZone } from "date-fns-tz";
import { ja } from "date-fns/locale";
import Toc from "../components/Toc.astro";
import BaseLayout from "./BaseLayout.astro";

type Props = {
	title: string;
	description?: string;
	headings: MarkdownHeading[];
	imageUrl?: string;
	lastmod?: Date;
};

const { headings, title, description, imageUrl, lastmod } = Astro.props;
const lastModStr = lastmod
	? formatInTimeZone(lastmod, "Asia/Tokyo", "yyyy/MM/dd HH:mm", { locale: ja })
	: "";
---

<BaseLayout
  title={title}
  description={description}
  headings={headings}
  imageUrl={imageUrl}
>
  <article>
    <header>
      <h1 class="max-w-800px mx-auto px-4 text-left w-fit">
        <span>
          {title}
        </span>
      </h1>
      {
        lastModStr && (
          <div class="max-w-1200px mx-auto px-4 md:px-8 text-sm">
            Last modified: {lastModStr}
          </div>
        )
      }
    </header>
    <div
      class="max-w-1200px mx-auto px-4 md:px-8 grid grid-cols-[minmax(0,1fr)_0] lg:(grid-cols-[minmax(0,1fr)_16rem] justify-center gap-4)"
    >
      <section class="all-[:not(.rlc-container)_a]:text-link post">
        <slot />
      </section>
      <aside class="hidden lg:block">
        <div class="sticky top-[calc(3.5rem)]">
          <div class="max-h-[calc(100vh-3.5rem)] flex">
            <Toc headings={headings} />
          </div>
        </div>
      </aside>
    </div>
  </article>
</BaseLayout>
<style>
  .post {
    h1,
    h2,
    h3,
    h4,
    h5 {
      a {
        visibility: hidden;
        margin-inline-start: 0.25rem;
      }
      &:hover a {
        visibility: visible;
      }
    }
  }
</style>
