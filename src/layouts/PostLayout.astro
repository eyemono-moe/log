---
import type { MarkdownHeading } from "astro";
import Post from "../components/solid/Post";
import BaseLayout from "./BaseLayout.astro";

type Props = {
	title: string;
	description?: string;
	headings: MarkdownHeading[];
	imageUrl?: string;
	createdAt: string;
	updatedAt?: string;
};

const { headings, title, description, imageUrl, createdAt, updatedAt } =
	Astro.props;
---

<BaseLayout
  title={title}
  description={description}
  headings={headings}
  imageUrl={imageUrl}
>
  <Post
    title={title}
    headings={headings}
    createdAt={createdAt}
    updatedAt={updatedAt}
  >
    <slot />
  </Post>
</BaseLayout>
