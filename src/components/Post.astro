---
import type { MarkdownHeading } from "astro";
import { format, parseISO } from "date-fns";
import Toc from "../components/Toc.astro";

type Props = {
	title: string;
	headings: MarkdownHeading[];
	lastmod?: string;
};

const { headings, title, lastmod } = Astro.props;

const strLastMod = lastmod && format(parseISO(lastmod), "yyyy/MM/dd");
---

<article class="@container">
  <header>
    <h1 class="max-w-800px mx-auto px-4 text-left w-fit">
      <span>
        {title}
      </span>
    </h1>
    <div class="max-w-1200px mx-auto px-4 @md:px-8 text-sm">
      <time datetime={lastmod}>
        Last modified: {strLastMod}
      </time>
    </div>
  </header>
  <div
    class="max-w-1200px mx-auto px-4 @md:px-8 @[1200px]:(grid grid-cols-[minmax(0,1fr)_16rem] justify-center gap-4)"
  >
    <section class="all-[a]:text-link post">
      <slot />
    </section>
    <aside class="hidden @[1200px]:block">
      <div class="sticky top-[calc(3.5rem)]">
        <div class="max-h-[calc(100vh-3.5rem)] flex">
          <Toc headings={headings} />
        </div>
      </div>
    </aside>
  </div>
</article>
<style>
  .post {
    h1,
    h2,
    h3,
    h4,
    h5 {
      a {
        visibility: hidden;
        margin-inline-start: 0.25rem;
      }
      &:hover a {
        visibility: visible;
      }
    }
  }
</style>
