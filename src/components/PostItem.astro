---
import { Image } from "astro:assets";
import { format } from "date-fns";
import type { Article } from "../libs/getArticles";

type Props = {
	source: Article["source"] | "eyemono.log";
	title: string;
	imageUrl?: string;
	createdAt: Date;
	updatedAt?: Date;
	href: string;
};

const { source, title, imageUrl, createdAt, updatedAt, href } = Astro.props;
---

<a
  class="group not-prose block"
  href={href}
  rel="noopener noreferrer"
  target={source === "eyemono.log" ? "_self" : "_blank"}
>
  <div class="overflow-hidden rounded">
    {
      imageUrl && (
        <Image
          src={imageUrl}
          alt={title}
          width={500}
          height={500 * (630 / 1200)}
          class="aspect-[1200/630] w-full object-cover group-hover:scale-105 transition-transform"
        />
      )
    }
  </div>
  <div>
    <h2 class="font-bold">
      {title}
      {
        source !== "eyemono.log" && (
          <div class="inline-block h-0.6lh w-auto aspect-square i-material-symbols:open-in-new-rounded" />
        )
      }
    </h2>
    <div class="text-sm flex items-center gap-1 op-70">
      {
        createdAt && (
          <time
            datetime={createdAt.toISOString()}
            class="flex items-center gap-0.5"
          >
            <div class="size-0.8lh i-material-symbols:edit-calendar-outline-rounded" />
            {format(createdAt, "yyyy/MM/dd")}
          </time>
        )
      }
      {
        updatedAt && (
          <time
            datetime={updatedAt.toISOString()}
            class="flex items-center gap-0.5"
          >
            <div class="size-0.8lh i-material-symbols:sync-rounded" />
            {format(updatedAt, "yyyy/MM/dd")}
          </time>
        )
      }
    </div>
  </div>
</a>
